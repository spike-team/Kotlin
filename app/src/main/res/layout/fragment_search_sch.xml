<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.set.search.SearchSchFragment">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/met_searchSchool"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="16dp"
        android:hint="@string/search_school"
        android:nextFocusDown="@id/btn_search"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_minCharacters="3"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_bottom"
        android:text="@string/do_search"
        android:textColor="@color/colorWhiteTrue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>